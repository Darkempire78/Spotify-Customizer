{
    "manifest_version": 3,
    "name": "Spotify Custom Theme",
    "version": "1.0.0",
    
    "description": "",
    "author": "Darkempire78",
    "homepage_url": "https://github.com/Darkempire78/",

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "storage",
        "activeTab",
        "scripting",
        "tabs"
    ],

    "host_permissions": [
        "https://open.spotify.com/*"
    ],

    "action": {
        "default_popup": "options.html"
    }
}
